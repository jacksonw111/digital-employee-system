{
  "flake8.importStrategy": "fromEnvironment",
  "files.exclude": {
    "**/__pycache__": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  },
  "files.autoSave": "afterDelay",
}
